{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>diggsweden/.github:renovate-base"
  ],
  "enabledManagers": [
    "github-actions",
    "gradle"
  ],
  "packageRules": [
    {
      "description": "Gradle/Android dependencies - Major updates",
      "matchManagers": [
        "gradle"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "gradle",
        "dependencies",
        "major-update"
      ],
      "groupName": "gradle major"
    },
    {
      "description": "Gradle/Android dependencies - Non-major updates",
      "matchManagers": [
        "gradle"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "addLabels": [
        "gradle",
        "dependencies"
      ],
      "groupName": "gradle non-major"
    },
    {
      "description": "Android Gradle Plugin",
      "groupName": "android gradle plugin",
      "matchPackageNames": [
        "com.android.tools.build:gradle"
      ]
    },
    {
      "description": "Kotlin dependencies",
      "groupName": "kotlin",
      "matchPackageNames": [
        "org.jetbrains.kotlin{/,}**",
        "/^org\\.jetbrains\\.kotlin:/"
      ]
    },
    {
      "description": "AndroidX dependencies",
      "groupName": "androidx",
      "matchPackageNames": [
        "androidx.{/,}**",
        "/^androidx\\./"
      ]
    },
    {
      "description": "Compose dependencies",
      "groupName": "compose",
      "matchPackageNames": [
        "androidx.compose{/,}**",
        "/^androidx\\.compose\\./"
      ]
    },
    {
      "description": "Development and testing tools",
      "groupName": "dev tools",
      "matchPackageNames": [
        "junit:junit",
        "androidx.test{/,}**",
        "/^androidx\\.test\\./"
      ]
    }
  ]
}
